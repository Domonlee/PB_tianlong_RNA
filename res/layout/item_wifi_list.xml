<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/wifi_ig"
        android:layout_width="64dip"
        android:layout_height="64dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/net_wifi" />

    <TextView
        android:id="@+id/wifi_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/wifi_ig"
        android:layout_marginBottom="14dp"
        android:layout_toRightOf="@+id/wifi_ig"
        android:textSize="20sp"
        android:text="TextView" />

    <TextView
        android:id="@+id/wifi_signal_strenth_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_alignBaseline="@+id/wifi_tv"
        android:layout_alignBottom="@+id/wifi_tv"
        android:layout_alignParentRight="true"
        android:text="TextView" />

</RelativeLayout>
