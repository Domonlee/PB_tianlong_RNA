<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    <RelativeLayout android:id="@+id/help_top_rl"
        style="@style/top_rl">
        <TextView android:id="@+id/help_top_uname_tv"
            style="@style/top_uname"/>
        <org.tianlong.rna.utlis.DigitalClock
		    android:id="@+id/help_top_time_dc"
     		android:layout_width="260dp"
     		android:layout_height="30dp"
     		android:layout_gravity="center_horizontal"
     		android:textColor="@android:color/white"
		    android:textSize="20sp"
		    android:layout_alignParentRight="true"
		    android:layout_centerVertical="true"/>
    </RelativeLayout>
	<RelativeLayout android:id="@+id/help_left_rl"
	    style="@style/left_rl"
	    android:layout_below="@id/help_top_rl">
        <RelativeLayout android:id="@+id/help_left_top_rl"
            style="@style/left_top_rl"
            android:background="@drawable/left_top">
            <TextView android:id="@+id/help_left_top_name_tv"
                style="@style/left_top_name"
                android:text="@string/help"/>
        </RelativeLayout>
	    <ListView android:id="@+id/help_left_lv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/help_left_top_rl"/>
	</RelativeLayout>
	<RelativeLayout android:id="@+id/help_right_rl"
	    android:layout_width="770dip"
	    android:layout_height="fill_parent"
	    android:layout_margin="5dip"
	    android:background="#505E8D"
	    android:layout_below="@id/help_top_rl"
	    android:layout_alignParentRight="true">
	    <RelativeLayout android:id="@+id/help_right_bottom_btn_rl"
	       	style="@style/right_bottom_rl"
	       	android:layout_width="fill_parent">
	        <Button android:id="@+id/help_right_back_btn"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:clickable="true"
	            android:background="@drawable/btn_selector"
		        android:text="@string/back"
		        android:textSize="15sp"
		        android:textColor="@android:color/white"
		        android:layout_alignParentRight="true"/>
	    </RelativeLayout>
	</RelativeLayout>
</RelativeLayout>
