<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/experiment_info_top_ename_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dip"
        android:text="实验一"
        android:textColor="@android:color/white"
        android:textSize="30sp" />

    <RelativeLayout
        android:id="@+id/experiment_info_body_rl"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/experiment_info_top_ename_tv"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="30dp" >

        <RelativeLayout
            android:id="@+id/experiment_info_body_cdate"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp" >

            <TextView
                android:id="@+id/experiment_info_body_cdate_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/exp_creat_date"
                android:textColor="@android:color/white"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/experiment_info_body_cdate_info_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dip"
                android:text="2013-10-31 17:50:36"
                android:textColor="@android:color/white"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/experiment_info_body_cdate_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/line" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/experiment_info_body_rdate"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_below="@id/experiment_info_body_cdate"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp" >

            <TextView
                android:id="@+id/experiment_info_body_rdate_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/exp_edit_date"
                android:textColor="@android:color/white"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/experiment_info_body_rdate_info_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dip"
                android:text="2013-10-31 17:50:36"
                android:textColor="@android:color/white"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/experiment_info_body_rdate_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/line" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/experiment_info_body_quick"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_below="@id/experiment_info_body_rdate"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp" >

            <TextView
                android:id="@+id/experiment_info_body_quick_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/exp_quick_exp"
                android:textColor="@android:color/white"
                android:textSize="25sp" />

            <CheckBox
                android:id="@+id/experiment_info_body_quick_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dip" />

            <ImageView
                android:id="@+id/experiment_info_body_quick_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/line" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/experiment_info_body_remark"
            android:layout_width="fill_parent"
            android:layout_height="170dip"
            android:layout_below="@id/experiment_info_body_quick"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp" >

            <TextView
                android:id="@+id/experiment_info_body_remark_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/exp_remark"
                android:textColor="@android:color/white"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/experiment_info_body_remark_info_tv"
                android:layout_width="240dip"
                android:layout_height="175dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dip"
                android:background="@drawable/info_bg"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/experiment_info_body_remark_info_et"
                android:layout_width="240dip"
                android:layout_height="175dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dip"
                android:background="@drawable/info_bg"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="25sp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/experiment_info_body_remark_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/line" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/experiment_info_bottom_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@id/experiment_info_body_remark"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="10dp" >

            <Button
                android:id="@+id/experiment_info_bottom_run_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_selector"
                android:clickable="true"
                android:text="@string/run"
                android:textColor="@android:color/white"
                android:textSize="15sp" />

            <Button
                android:id="@+id/experiment_info_bottom_edit_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dip"
                android:layout_marginRight="14dp"
                android:layout_toRightOf="@id/experiment_info_bottom_run_btn"
                android:background="@drawable/btn_selector"
                android:clickable="true"
                android:text="@string/edit"
                android:textColor="@android:color/white"
                android:textSize="15sp" />


            <Button
                android:id="@+id/experiment_info_body_remark_info_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dip"
                android:layout_marginRight="8dp"
                android:layout_toRightOf="@id/experiment_info_bottom_edit_btn"
                android:background="@drawable/btn_selector"
                android:clickable="true"
                android:text="@string/save"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:visibility="gone" />
            
            <Button
                android:id="@+id/experiment_info_body_remark_info_cancle_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dip"
                android:layout_toRightOf="@id/experiment_info_body_remark_info_btn"
                android:layout_marginRight="8dp"
                android:background="@drawable/btn_selector"
                android:clickable="true"
                android:text="@string/cancle"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:visibility="gone" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>