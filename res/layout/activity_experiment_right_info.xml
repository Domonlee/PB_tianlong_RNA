<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView android:id="@+id/experiment_info_top_ename_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="实验一"
        android:textSize="30sp"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dip"/>
    <RelativeLayout android:id="@+id/experiment_info_body_rl"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/experiment_info_top_ename_tv">
        <RelativeLayout android:id="@+id/experiment_info_body_save"
            android:layout_width="540dip"
            android:layout_height="50dip"
            android:layout_centerHorizontal="true">
            <Button android:id="@+id/experiment_info_body_save_btn"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/btn_selector"
	            android:layout_alignParentRight="true"
	            android:text="@string/other_save"
	            android:textColor="@android:color/white"
	            android:textSize="15sp"
	            android:clickable="true"
	            android:visibility="invisible"/>
            <ImageView android:id="@+id/experiment_info_body_save_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/line"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/experiment_info_body_cdate"
            android:layout_width="540dip"
            android:layout_height="50dip"
            android:layout_below="@id/experiment_info_body_save"
            android:layout_centerHorizontal="true">
            <TextView android:id="@+id/experiment_info_body_cdate_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/exp_creat_date"
                android:textSize="25sp"
                android:textColor="@android:color/white"
                android:layout_centerVertical="true"/>
            <TextView android:id="@+id/experiment_info_body_cdate_info_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2013-10-31 17:50:36"
                android:textSize="25sp"
                android:textColor="@android:color/white"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
            <ImageView android:id="@+id/experiment_info_body_cdate_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/line"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/experiment_info_body_rdate"
            android:layout_width="540dip"
            android:layout_height="50dip"
            android:layout_below="@id/experiment_info_body_cdate"
            android:layout_centerHorizontal="true">
            <TextView android:id="@+id/experiment_info_body_rdate_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/exp_edit_date"
                android:textSize="25sp"
                android:textColor="@android:color/white"
                android:layout_centerVertical="true"/>
            <TextView android:id="@+id/experiment_info_body_rdate_info_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2013-10-31 17:50:36"
                android:textSize="25sp"
                android:textColor="@android:color/white"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
            <ImageView android:id="@+id/experiment_info_body_rdate_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/line"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/experiment_info_body_quick"
            android:layout_width="540dip"
            android:layout_height="50dip"
            android:layout_below="@id/experiment_info_body_rdate"
            android:layout_centerHorizontal="true">
            <TextView android:id="@+id/experiment_info_body_quick_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/exp_quick_exp"
                android:textSize="25sp"
                android:textColor="@android:color/white"
                android:layout_centerVertical="true"/>
            <CheckBox android:id="@+id/experiment_info_body_quick_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"/>
            <ImageView android:id="@+id/experiment_info_body_quick_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/line"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/experiment_info_body_remark"
            android:layout_width="540dip"
            android:layout_height="190dip"
            android:layout_below="@id/experiment_info_body_quick"
            android:layout_centerHorizontal="true">
            <TextView android:id="@+id/experiment_info_body_remark_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/exp_remark"
                android:textSize="25sp"
                android:textColor="@android:color/white"
                android:layout_centerVertical="true"/>
            <TextView android:id="@+id/experiment_info_body_remark_info_tv"
                android:layout_width="240dip"
                android:layout_height="180dip"
                android:textSize="25sp"
                android:textColor="@android:color/white"
                android:layout_alignParentRight="true"
                android:background="@drawable/info_bg"
                android:gravity="center"
                android:layout_centerVertical="true"/>
            <EditText android:id="@+id/experiment_info_body_remark_info_et"
                android:layout_width="240dip"
                android:layout_height="180dip"
                android:textSize="25sp"
                android:textColor="@android:color/white"
                android:layout_alignParentRight="true"
                android:background="@drawable/info_bg"
                android:gravity="center"
                android:visibility="gone"
                android:layout_centerVertical="true"/>
            <ImageView android:id="@+id/experiment_info_body_remark_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/line"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <Button android:id="@+id/experiment_info_body_remark_info_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_selector"
            android:clickable="true"
            android:layout_toRightOf="@id/experiment_info_body_remark"
            android:layout_alignBottom="@id/experiment_info_body_remark"
            android:layout_marginLeft="10dip"
            android:visibility="gone"/>
        <Button android:id="@+id/experiment_info_body_remark_info_cancle_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancle"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_selector"
            android:clickable="true"
            android:layout_toRightOf="@id/experiment_info_body_remark"
            android:layout_above="@id/experiment_info_body_remark_info_btn"
            android:layout_marginLeft="10dip"
            android:layout_marginBottom="20dip"
            android:visibility="gone"/>
        <RelativeLayout android:id="@+id/experiment_info_bottom_btn"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignRight="@id/experiment_info_body_remark"
	        android:layout_alignParentBottom="true">
	        <Button android:id="@+id/experiment_info_bottom_run_btn"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/run"
	            android:textSize="15sp"
	            android:textColor="@android:color/white"
	            android:background="@drawable/btn_selector"
	            android:clickable="true"/>
	        <Button android:id="@+id/experiment_info_bottom_edit_btn"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/edit"
	            android:textSize="15sp"
	            android:textColor="@android:color/white"
	            android:background="@drawable/btn_selector"
	            android:layout_marginLeft="25dip"
	            android:clickable="true"
	            android:layout_toRightOf="@id/experiment_info_bottom_run_btn"/>
    </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
