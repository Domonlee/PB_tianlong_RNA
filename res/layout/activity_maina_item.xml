<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
	<RelativeLayout android:id="@+id/main_item_rl"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerInParent="true">
	    <ImageView
	        android:id="@+id/main_item_iv"
	        android:layout_width="150dp"
	        android:layout_height="150dp"
	        android:layout_centerHorizontal="true"/>
	    <TextView
	        android:id="@+id/main_item_tv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/main_item_iv"
	        android:textSize="20sp"
	        android:textColor="@android:color/black"
	        android:layout_centerHorizontal="true"/>
	    <TextView android:id="@+id/main_item_id_tv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/main_item_tv"
	        android:textColor="@android:color/white"
	        android:visibility="gone"/>
	</RelativeLayout>
</RelativeLayout>