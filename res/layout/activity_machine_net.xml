<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/machine_net_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dip"
        android:layout_marginTop="5dip"
        android:background="@drawable/net" />

    <RelativeLayout
        android:id="@+id/machine_net_body_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >
        
        <TextView 
            android:id="@+id/machine_net_wifi_tv"
                style="@style/right_textview"
                android:text="WIFI列表"
                android:gravity="left"
				android:paddingTop="10dip"
                android:layout_alignParentLeft="true"/>

        <ListView
            android:id="@+id/machine_net_wifi_lv"
            android:layout_width="500dip"
            android:layout_below="@id/machine_net_wifi_tv"
            android:layout_height="wrap_content" >
            >
        </ListView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/machine_net_bottom_btn_rl"
        style="@style/right_bottom_rl"
        android:layout_alignParentRight="true"
        android:layout_marginRight="80dip" >

        <Button
            android:id="@+id/machine_net_bottom_btn_save"
            style="@style/right_btn"
            android:text="@string/sure" />
    </RelativeLayout>

</RelativeLayout>