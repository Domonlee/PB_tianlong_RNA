<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <ImageView android:id="@+id/machine_net_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dip"
        android:layout_marginRight="20dip"
        android:background="@drawable/net"/>
    <RelativeLayout android:id="@+id/machine_net_body_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <RelativeLayout android:id="@+id/machine_net_body_name_rl"
            android:layout_width="500dip"
            android:layout_height="wrap_content">
            <TextView android:id="@+id/machine_net_body_name_tv"
                style="@style/right_textview"
                android:text="@string/net_name"
                android:gravity="left"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"/>
            <EditText android:id="@+id/machine_net_body_name_et"
                style="@style/right_edittext"
                android:hint="@string/net_name_input"/>
            <ImageView android:id="@+id/machine_net_body_name_iv"
                style="@style/right_bottom_imageview"
                android:layout_marginTop="10dip"
                android:layout_below="@id/machine_net_body_name_et"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/machine_net_body_ip_rl"
            android:layout_width="500dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:layout_below="@id/machine_net_body_name_rl">
            <TextView android:id="@+id/machine_net_body_ip_tv"
                style="@style/right_textview"
                android:text="@string/net_ip"
                android:gravity="left"
                android:layout_centerVertical="true"/>
            <EditText android:id="@+id/machine_net_body_ip_et"
                style="@style/right_edittext"
                android:hint="@string/net_ip_input"/>
            <ImageView android:id="@+id/machine_net_body_ip_iv"
                style="@style/right_bottom_imageview"
                android:layout_marginTop="10dip"
                android:layout_below="@id/machine_net_body_ip_et"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/machine_net_body_mac_rl"
            android:layout_width="500dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:layout_below="@id/machine_net_body_ip_rl">
            <TextView android:id="@+id/machine_net_body_mac_tv"
                style="@style/right_textview"
                android:text="@string/net_mac"
                android:gravity="left"
                android:layout_centerVertical="true"/>
            <EditText android:id="@+id/machine_net_body_mac_et"
                style="@style/right_edittext"
                android:hint="@string/net_mac_input"/>
            <ImageView android:id="@+id/machine_net_body_mac_iv"
                style="@style/right_bottom_imageview"
                android:layout_marginTop="10dip"
                android:layout_below="@id/machine_net_body_mac_et"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/machine_net_body_gateway_rl"
            android:layout_width="500dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:layout_below="@id/machine_net_body_mac_rl">
            <TextView android:id="@+id/machine_net_body_gateway_tv"
                style="@style/right_textview"
                android:text="@string/net_gateway"
                android:gravity="left"
                android:layout_centerVertical="true"/>
            <EditText android:id="@+id/machine_net_body_gateway_et"
                style="@style/right_edittext"
                android:hint="@string/net_gateway_input"/>
            <ImageView android:id="@+id/machine_net_body_gateway_iv"
                style="@style/right_bottom_imageview"
                android:layout_marginTop="10dip"
                android:layout_below="@id/machine_net_body_gateway_et"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/machine_net_body_mask_rl"
            android:layout_width="500dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:layout_below="@id/machine_net_body_gateway_rl">
            <TextView android:id="@+id/machine_net_body_mask_tv"
                style="@style/right_textview"
                android:text="@string/net_mask"
                android:gravity="left"
                android:layout_centerVertical="true"/>
            <EditText android:id="@+id/machine_net_body_mask_et"
                style="@style/right_edittext"
                android:hint="@string/net_mask_input"/>
            <ImageView android:id="@+id/machine_net_body_mask_iv"
                style="@style/right_bottom_imageview"
                android:layout_marginTop="10dip"
                android:layout_below="@id/machine_net_body_mask_et"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/machine_net_bottom_btn_rl"
        style="@style/right_bottom_rl"
        android:layout_alignParentRight="true"
        android:layout_marginRight="80dip">
        <Button android:id="@+id/machine_net_bottom_btn_save"
            style="@style/right_btn"
            android:text="@string/sure"/>
    </RelativeLayout>
</RelativeLayout>
