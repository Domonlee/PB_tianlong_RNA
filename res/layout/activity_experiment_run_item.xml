<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/experiment_run_item_rl"
        android:layout_width="392dip"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dip"
        android:background="@anim/anim_view" >

        <TextView
            android:id="@+id/experiment_run_item_top_name_tv"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:gravity="center"
            android:text="步骤一"
            android:textColor="@android:color/white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/experiment_run_item_top_iv"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_below="@+id/experiment_run_item_top_name_tv"
            android:background="#778899" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/experiment_run_item_top_name_tv"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/experiment_run_item_head_rl"
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_weight="3"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/experiment_run_item_head_wait_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="0dip"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="8dip"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/experiment_run_item_head_wait_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/exp_wait"
                        android:textColor="@android:color/white"
                        android:textSize="20sp" />

                    <ProgressBar
                        android:id="@+id/experiment_run_item_head_wait_pb"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="220dip"
                        android:layout_height="30dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"
                        android:max="100"
                        android:progress="100"
                        android:progressDrawable="@drawable/progressbar_wait" />

                    <TextView
                        android:id="@+id/experiment_run_item_head_wait_info_tv"
                        android:layout_width="220dip"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"
                        android:gravity="center"
                        android:text="00:00:00"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/experiment_run_item_head_blend_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="0dip"
                    android:layout_marginLeft="8dip"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/experiment_run_item_head_blend_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/exp_blend"
                        android:textColor="@android:color/white"
                        android:textSize="20sp" />

                    <ProgressBar
                        android:id="@+id/experiment_run_item_head_blend_pb"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="220dip"
                        android:layout_height="30dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"
                        android:max="100"
                        android:progress="100"
                        android:progressDrawable="@drawable/progressbar_blend" />

                    <TextView
                        android:id="@+id/experiment_run_item_head_blend_info_tv"
                        android:layout_width="220dip"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"
                        android:gravity="center"
                        android:text="00:00:00"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/experiment_run_item_head_magnet_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="0dip"
                    android:layout_marginLeft="8dip"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/experiment_run_item_head_magnet_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/exp_magnetic"
                        android:textColor="@android:color/white"
                        android:textSize="20sp" />

                    <ProgressBar
                        android:id="@+id/experiment_run_item_head_magnet_pb"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="220dip"
                        android:layout_height="30dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"
                        android:max="100"
                        android:progress="100"
                        android:progressDrawable="@drawable/progressbar_magnet" />

                    <TextView
                        android:id="@+id/experiment_run_item_head_magnet_info_tv"
                        android:layout_width="220dip"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"
                        android:gravity="center"
                        android:text="00:00:00"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/experiment_run_item_head_iv"
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#778899" />

            <LinearLayout
                android:id="@+id/experiment_run_item_body_rl"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:layout_below="@id/experiment_run_item_head_iv"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/experiment_run_item_body_hole_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="0dip" 
                    android:layout_weight="1"
                    
                    >

                    <TextView
                        android:id="@+id/experiment_run_item_body_hole_tv"
                        android:layout_width="194dip"
                        android:layout_height="fill_parent"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="@string/exp_hole"
                        android:textColor="@android:color/white"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/experiment_run_item_body_hole_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_toRightOf="@id/experiment_run_item_body_hole_tv"
                        android:background="@drawable/shu" />

                    <TextView
                        android:id="@+id/experiment_run_item_body_hole_info_tv"
                        android:layout_width="194dip"
                        android:layout_height="fill_parent"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/experiment_run_item_body_hole_iv"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="@android:color/white"
                        android:textSize="20sp" />
                </RelativeLayout>

                <TextView
                    android:id="@id/experiment_run_item_body_hole_iv"
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="#778899"
                    android:text="TextView" />

                <RelativeLayout
                    android:id="@+id/experiment_run_item_body_vol_rl"
                    android:layout_width="wrap_content"
                     android:layout_height="0dip" 
                    android:layout_weight="1"
                    >
                    

                    <TextView
                        android:id="@+id/experiment_run_item_body_vol_tv"
                        android:layout_width="194dip"
                        android:layout_height="fill_parent"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="@string/exp_vol"
                        android:textColor="@android:color/white"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/experiment_run_item_body_vol_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_toRightOf="@id/experiment_run_item_body_vol_tv"
                        android:background="@drawable/shu" />

                    <TextView
                        android:id="@+id/experiment_run_item_body_vol_info_et"
                        android:layout_width="194dip"
                        android:layout_height="fill_parent"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/experiment_run_item_body_vol_iv"
                        android:gravity="center"
                        android:text="550ul"
                        android:textColor="@android:color/white"
                        android:textSize="20sp" />
                </RelativeLayout>

                <TextView
                    android:id="@id/experiment_run_item_body_vol_iv"
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="#778899"
                    android:text="TextView" />

                <RelativeLayout
                    android:id="@+id/experiment_run_item_body_speed_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="0dip" 
                    android:layout_weight="1"
                    >
                    

                    <TextView
                        android:id="@+id/experiment_run_item_body_speed_tv"
                        android:layout_width="194dip"
                        android:layout_height="fill_parent"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="@string/exp_blend_speed"
                        android:textColor="@android:color/white"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/experiment_run_item_body_speed_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_toRightOf="@id/experiment_run_item_body_speed_tv"
                        android:background="@drawable/shu" />

                    <TextView
                        android:id="@+id/experiment_run_item_body_speed_info_tv"
                        android:layout_width="194dip"
                        android:layout_height="fill_parent"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/experiment_run_item_body_speed_tv"
                        android:gravity="center"
                        android:text="@string/exp_speed_unit"
                        android:textColor="@android:color/white"
                        android:textSize="20sp" />
                </RelativeLayout>

                <TextView
                    android:id="@id/experiment_run_item_body_speed_iv"
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="#778899"
                    android:text="TextView" />

                <RelativeLayout
                    android:id="@+id/experiment_run_item_body_temp_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="0dip" 
                    android:layout_weight="1"
                    >
                    

                    <TextView
                        android:id="@+id/experiment_run_item_body_temp_tv"
                        android:layout_width="194dip"
                        android:layout_height="fill_parent"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="@string/exp_temp"
                        android:textColor="@android:color/white"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/experiment_run_item_body_temp_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_toRightOf="@id/experiment_run_item_body_temp_tv"
                        android:background="@drawable/shu" />

                    <TextView
                        android:id="@+id/experiment_run_item_body_temp_info_et"
                        android:layout_width="194dip"
                        android:layout_height="fill_parent"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/experiment_run_item_body_temp_iv"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="60°C"
                        android:textColor="@android:color/white"
                        android:textSize="20sp" />
                </RelativeLayout>

                <TextView
                    android:id="@id/experiment_run_item_body_temp_iv"
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="#778899"
                    android:text="TextView" />

                <RelativeLayout
                    android:id="@+id/experiment_run_item_body_switch_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="0dip" 
                    android:layout_weight="1"
                    >
                    

                    <TextView
                        android:id="@+id/experiment_run_item_body_switch_tv"
                        android:layout_width="194dip"
                        android:layout_height="fill_parent"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="@string/exp_temp_type"
                        android:textColor="@android:color/white"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/experiment_run_item_body_switch_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_toRightOf="@id/experiment_run_item_body_switch_tv"
                        android:background="@drawable/shu" />

                    <TextView
                        android:id="@+id/experiment_run_item_body_switch_info_tv"
                        android:layout_width="194dip"
                        android:layout_height="fill_parent"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/experiment_run_item_body_switch_iv"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:textSize="20sp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/experiment_run_item_switch_iv"
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="#778899"
                    android:text="TextView" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/experiment_run_item_bottom_rl"
                android:layout_width="fill_parent"
                android:layout_height="48dip"
                android:layout_alignParentBottom="true" >

                <TextView
                    android:id="@+id/experiment_run_item_bottom_name_et"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="裂     解"
                    android:textColor="@android:color/white"
                    android:textSize="25sp" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>