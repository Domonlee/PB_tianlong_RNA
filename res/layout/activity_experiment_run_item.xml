<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/experiment_run_item_rl"
        android:layout_width="392dip"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dip"
        android:background="@anim/anim_view">
        <TextView android:id="@+id/experiment_run_item_top_name_tv"
	        android:layout_width="fill_parent"
	        android:layout_height="50dip"
	        android:text="步骤一"
	        android:textSize="25sp"
	        android:textColor="@android:color/white"
	        android:gravity="center"/>
       	<ImageView android:id="@+id/experiment_run_item_top_iv"
       	    android:layout_width="fill_parent"
       	    android:layout_height="wrap_content"
       	    android:layout_below="@+id/experiment_run_item_top_name_tv"
       	    android:background="@drawable/heng"/>
	    <RelativeLayout android:id="@+id/experiment_run_item_head_rl"
	        android:layout_width="fill_parent"
	        android:layout_height="168dip"
	        android:layout_below="@id/experiment_run_item_top_name_tv">
	        <RelativeLayout android:id="@+id/experiment_run_item_head_wait_rl"
	            android:layout_width="wrap_content"
	            android:layout_height="56dip"
	            android:layout_centerHorizontal="true">
	            <TextView android:id="@+id/experiment_run_item_head_wait_tv"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/exp_wait"
	                android:textSize="20sp"
	                android:textColor="@android:color/white"
	                android:layout_centerVertical="true"/>
	            <ProgressBar android:id="@+id/experiment_run_item_head_wait_pb"
			        style="?android:attr/progressBarStyleHorizontal"
			        android:layout_width="220dip"
			        android:layout_height="30dip"
			        android:max="100"
			        android:progress="100"
			        android:progressDrawable="@drawable/progressbar_wait"
			        android:layout_centerVertical="true"
	                android:layout_alignParentRight="true"
	                android:layout_marginRight="10dip"/>
	            <TextView android:id="@+id/experiment_run_item_head_wait_info_tv"
	                android:layout_width="220dip"
	                android:layout_height="wrap_content"
	                android:text="00:00:00"
	                android:textSize="20sp"
	                android:textColor="@android:color/black"
	                android:layout_centerVertical="true"
	                android:layout_alignParentRight="true"
	                android:layout_marginRight="10dip"
	                android:gravity="center"/>
	        </RelativeLayout>
	        <RelativeLayout android:id="@+id/experiment_run_item_head_blend_rl"
	            android:layout_width="wrap_content"
	            android:layout_height="56dip"
	            android:layout_centerHorizontal="true"
	            android:layout_below="@id/experiment_run_item_head_wait_rl">
	            <TextView android:id="@+id/experiment_run_item_head_blend_tv"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/exp_blend"
	                android:textSize="20sp"
	                android:textColor="@android:color/white"
	                android:layout_centerVertical="true"/>
	            <ProgressBar android:id="@+id/experiment_run_item_head_blend_pb"
			        style="?android:attr/progressBarStyleHorizontal"
			        android:layout_width="220dip"
			        android:layout_height="30dip"
			        android:max="100"
			        android:progress="100"
			        android:progressDrawable="@drawable/progressbar_blend"
			        android:layout_centerVertical="true"
	                android:layout_alignParentRight="true"
	                android:layout_marginRight="10dip"/>
	            <TextView android:id="@+id/experiment_run_item_head_blend_info_tv"
	                android:layout_width="220dip"
	                android:layout_height="wrap_content"
	                android:text="00:00:00"
	                android:textSize="20sp"
	                android:textColor="@android:color/black"
	                android:layout_centerVertical="true"
	                android:layout_alignParentRight="true"
	                android:layout_marginRight="10dip"
	                android:gravity="center"/>
	        </RelativeLayout>
	        <RelativeLayout android:id="@+id/experiment_run_item_head_magnet_rl"
	            android:layout_width="wrap_content"
	            android:layout_height="56dip"
	            android:layout_centerHorizontal="true"
	            android:layout_below="@id/experiment_run_item_head_blend_rl">
	            <TextView android:id="@+id/experiment_run_item_head_magnet_tv"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/exp_magnetic"
	                android:textSize="20sp"
	                android:textColor="@android:color/white"
	                android:layout_centerVertical="true"/>
	            <ProgressBar android:id="@+id/experiment_run_item_head_magnet_pb"
			        style="?android:attr/progressBarStyleHorizontal"
			        android:layout_width="220dip"
			        android:layout_height="30dip"
			        android:max="100"
			        android:progress="100"
			        android:progressDrawable="@drawable/progressbar_magnet"
			        android:layout_centerVertical="true"
	                android:layout_alignParentRight="true"
	                android:layout_marginRight="10dip"/>
	            <TextView android:id="@+id/experiment_run_item_head_magnet_info_tv"
	                android:layout_width="220dip"
	                android:layout_height="wrap_content"
	                android:text="00:00:00"
	                android:textSize="20sp"
	                android:textColor="@android:color/black"
	                android:layout_centerVertical="true"
	                android:layout_alignParentRight="true"
	                android:layout_marginRight="10dip"
	                android:gravity="center"/>
	        </RelativeLayout>
	    </RelativeLayout>
	    <ImageView android:id="@+id/experiment_run_item_head_iv"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/experiment_run_item_head_rl"
	        android:background="@drawable/heng"/>
	    <RelativeLayout android:id="@+id/experiment_run_item_body_rl"
	        android:layout_width="fill_parent"
	        android:layout_height="321dip"
	        android:layout_below="@id/experiment_run_item_head_iv">
	        <RelativeLayout android:id="@+id/experiment_run_item_body_hole_rl"
	            android:layout_width="wrap_content"
	            android:layout_height="40dip">
	            <TextView android:id="@+id/experiment_run_item_body_hole_tv"
	                android:layout_width="194dip"
	                android:layout_height="fill_parent"
	                android:layout_centerVertical="true"
	                android:text="@string/exp_hole"
	                android:textSize="20sp"
	                android:textColor="@android:color/white"
	                android:gravity="center"/>
	            <ImageView android:id="@+id/experiment_run_item_body_hole_iv"
	                android:layout_width="wrap_content"
	                android:layout_height="fill_parent"
	                android:background="@drawable/shu"
	                android:layout_toRightOf="@id/experiment_run_item_body_hole_tv"/>
	            <TextView android:id="@+id/experiment_run_item_body_hole_info_tv"
	                android:layout_width="194dip"
	                android:layout_height="fill_parent"
	                android:layout_centerVertical="true"
	                android:text="2"
	                android:textSize="20sp"
	                android:textColor="@android:color/white"
	                android:gravity="center"
	                android:layout_toRightOf="@id/experiment_run_item_body_hole_iv"/>
	        </RelativeLayout>
	        <ImageView android:id="@+id/experiment_run_item_body_hole_iv"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_below="@id/experiment_run_item_body_hole_rl"
		        android:background="@drawable/heng"/>
	        <RelativeLayout android:id="@+id/experiment_run_item_body_vol_rl"
	            android:layout_width="wrap_content"
	            android:layout_height="40dip"
	            android:layout_below="@id/experiment_run_item_body_hole_rl">
	            <TextView android:id="@+id/experiment_run_item_body_vol_tv"
	                android:layout_width="194dip"
	                android:layout_height="fill_parent"
	                android:layout_centerVertical="true"
	                android:text="@string/exp_vol"
	                android:textSize="20sp"
	                android:textColor="@android:color/white"
	                android:gravity="center"/>
	            <ImageView android:id="@+id/experiment_run_item_body_vol_iv"
	                android:layout_width="wrap_content"
	                android:layout_height="fill_parent"
	                android:background="@drawable/shu"
	                android:layout_toRightOf="@id/experiment_run_item_body_vol_tv"/>
	            <TextView android:id="@+id/experiment_run_item_body_vol_info_et"
	                android:layout_width="194dip"
	                android:layout_height="fill_parent"
	                android:layout_centerVertical="true"
	                android:text="550ul"
	                android:textSize="20sp"
	                android:textColor="@android:color/white"
	                android:gravity="center"
	                android:layout_toRightOf="@id/experiment_run_item_body_vol_iv"/>
	        </RelativeLayout>
	        <ImageView android:id="@+id/experiment_run_item_body_vol_iv"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_below="@id/experiment_run_item_body_vol_rl"
		        android:background="@drawable/heng"/>
	        <RelativeLayout android:id="@+id/experiment_run_item_body_speed_rl"
	            android:layout_width="wrap_content"
	            android:layout_height="40dip"
	            android:layout_below="@id/experiment_run_item_body_vol_iv">
	            <TextView android:id="@+id/experiment_run_item_body_speed_tv"
	                android:layout_width="194dip"
	                android:layout_height="fill_parent"
	                android:layout_centerVertical="true"
	                android:text="@string/exp_blend_speed"
	                android:textSize="20sp"
	                android:textColor="@android:color/white"
	                android:gravity="center"/>
	            <ImageView android:id="@+id/experiment_run_item_body_speed_iv"
	                android:layout_width="wrap_content"
	                android:layout_height="fill_parent"
	                android:background="@drawable/shu"
	                android:layout_toRightOf="@id/experiment_run_item_body_speed_tv"/>
	            <TextView android:id="@+id/experiment_run_item_body_speed_info_tv"
	                android:layout_width="194dip"
	                android:layout_height="fill_parent"
	                android:layout_centerVertical="true"
	                android:text="@string/exp_speed_unit"
	                android:textSize="20sp"
	                android:textColor="@android:color/white"
	                android:gravity="center"
	                android:layout_toRightOf="@id/experiment_run_item_body_speed_tv"/>
	        </RelativeLayout>
	        <ImageView android:id="@+id/experiment_run_item_body_speed_iv"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_below="@id/experiment_run_item_body_speed_rl"
		        android:background="@drawable/heng"/>
	        <RelativeLayout android:id="@+id/experiment_run_item_body_temp_rl"
	            android:layout_width="wrap_content"
	            android:layout_height="40dip"
	            android:layout_below="@id/experiment_run_item_body_speed_rl">
	            <TextView android:id="@+id/experiment_run_item_body_temp_tv"
	                android:layout_width="194dip"
	                android:layout_height="fill_parent"
	                android:layout_centerVertical="true"
	                android:text="@string/exp_temp"
	                android:textSize="20sp"
	                android:textColor="@android:color/white"
	                android:gravity="center"/>
	            <ImageView android:id="@+id/experiment_run_item_body_temp_iv"
	                android:layout_width="wrap_content"
	                android:layout_height="fill_parent"
	                android:background="@drawable/shu"
	                android:layout_toRightOf="@id/experiment_run_item_body_temp_tv"/>
	            <TextView android:id="@+id/experiment_run_item_body_temp_info_et"
	                android:layout_width="194dip"
	                android:layout_height="fill_parent"
	                android:layout_centerVertical="true"
	                android:text="60°C"
	                android:textSize="20sp"
	                android:textColor="@android:color/white"
	                android:gravity="center"
	                android:layout_toRightOf="@id/experiment_run_item_body_temp_iv"/>
	        </RelativeLayout>
	        <ImageView android:id="@+id/experiment_run_item_body_temp_iv"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_below="@id/experiment_run_item_body_temp_rl"
		        android:background="@drawable/heng"/>
	        <RelativeLayout android:id="@+id/experiment_run_item_body_switch_rl"
	            android:layout_width="wrap_content"
	            android:layout_height="40dip"
	            android:layout_below="@id/experiment_run_item_body_temp_iv">
	            <TextView android:id="@+id/experiment_run_item_body_switch_tv"
	                android:layout_width="194dip"
	                android:layout_height="fill_parent"
	                android:layout_centerVertical="true"
	                android:text="@string/exp_temp_type"
	                android:textSize="20sp"
	                android:textColor="@android:color/white"
	                android:gravity="center"/>
	            <ImageView android:id="@+id/experiment_run_item_body_switch_iv"
	                android:layout_width="wrap_content"
	                android:layout_height="fill_parent"
	                android:background="@drawable/shu"
	                android:layout_toRightOf="@id/experiment_run_item_body_switch_tv"/>
	            <TextView android:id="@+id/experiment_run_item_body_switch_info_tv"
	                android:layout_width="194dip"
	                android:layout_height="fill_parent"
	                android:layout_centerVertical="true"
	                android:textSize="20sp"
	                android:textColor="@android:color/white"
	                android:gravity="center"
	                android:layout_toRightOf="@id/experiment_run_item_body_switch_iv"/>
	        </RelativeLayout>
	        <ImageView android:id="@+id/experiment_run_item_switch_iv"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_below="@id/experiment_run_item_body_switch_rl"
		        android:background="@drawable/heng"/>
	    </RelativeLayout>
	    <RelativeLayout android:id="@+id/experiment_run_item_bottom_rl"
	        android:layout_width="fill_parent"
	        android:layout_height="53dip"
	        android:layout_alignParentBottom="true">
	        <TextView android:id="@+id/experiment_run_item_bottom_name_et"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="裂     解"
	            android:textSize="25sp"
	            android:textColor="@android:color/white"
	            android:gravity="center"
	            android:layout_centerInParent="true"/>
	    </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
