<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">
    <RelativeLayout android:id="@+id/activity_upanddown_top_rl"
        style="@style/top_rl">
        <TextView android:id="@+id/activity_upanddown_top_uname_tv"
            style="@style/top_uname"/>
        <org.tianlong.rna.utlis.DigitalClock
		    android:id="@+id/activity_upanddown_top_time_dc"
     		android:layout_width="260dp"
     		android:layout_height="30dp"
     		android:layout_gravity="center_horizontal"
     		android:textColor="@android:color/white"
		    android:textSize="20sp"
		    android:layout_alignParentRight="true"
		    android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/activity_upanddown_rl"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_margin="5dip"
	    android:background="#505E8D"
	    android:layout_below="@id/activity_upanddown_top_rl"
	    android:layout_alignParentRight="true">
	    <RelativeLayout android:id="@+id/activity_upanddown_left_rl"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dip"
	        android:layout_marginLeft="95dip">
	        <RelativeLayout android:id="@+id/activity_upanddown_up_bg_rl"
		        android:layout_width="360dip"
		        android:layout_height="470dip"
		        android:background="@android:color/black"
		        android:layout_marginTop="20dip"
		        android:layout_marginLeft="35dip"/>
		    <RelativeLayout android:id="@+id/activity_upanddown_up_rl"
		        android:layout_width="360dip"
		        android:layout_height="470dip"
		        android:background="#314F67"
		        android:layout_marginTop="10dip"
	        	android:layout_marginLeft="25dip">
	        	<RelativeLayout android:id="@+id/activity_upanddown_up_info_top_rl"
	        	    android:layout_width="wrap_content"
	        	    android:layout_height="wrap_content"
	        	    android:layout_marginTop="10dip"
	        	    android:layout_centerHorizontal="true">
	        	    <ImageView android:id="@+id/activity_upanddown_up_top_name_iv"
	        	        android:layout_width="45dip"
	        	        android:layout_height="45dip"
	        	        android:background="@drawable/instrument_up"/>
	        	    <TextView android:id="@+id/activity_upanddown_up_top_tv"
		        	    android:layout_width="wrap_content"
		        	    android:layout_height="wrap_content"
		        	    android:text="@string/local_file"
		        	    android:textColor="@android:color/white"
		        	    android:textSize="20sp"
		        	    android:layout_marginLeft="10dip"
		        	    android:layout_centerVertical="true"
		        	    android:layout_toRightOf="@id/activity_upanddown_up_top_name_iv"/>
	        	</RelativeLayout>
	        	<ImageView android:id="@+id/activity_upanddown_up_top_iv"
	        	    style="@style/right_bottom_imageview"
	        	    android:layout_width="360dip"
	        	    android:layout_centerHorizontal="true"
	        	    android:layout_marginTop="10dip"
	        	    android:layout_below="@id/activity_upanddown_up_info_top_rl" />
	        	<ListView android:id="@+id/activity_upanddown_up_top_lv"
	        	    android:layout_width="fill_parent"
	        	    android:layout_height="fill_parent"
	        	    android:layout_marginBottom="40dip"
	        	    android:layout_below="@id/activity_upanddown_up_top_iv"
	        	    android:divider="@drawable/line"
	        	    android:layout_centerHorizontal="true"/>
	        	<Button android:id="@+id/activity_upanddown_up_top_btn"
	        	    android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:clickable="true"
		            android:background="@drawable/btn_selector"
			        android:text="@string/down"
			        android:textSize="15sp"
			        android:textColor="@android:color/white"
			        android:layout_alignParentRight="true"
			        android:layout_alignParentBottom="true"
			        android:layout_marginRight="5dip"
			        android:layout_marginBottom="5dip"/>
	    	</RelativeLayout>
	    </RelativeLayout>
	    <RelativeLayout android:id="@+id/activity_upanddown_right_rl"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dip"
	        android:layout_marginLeft="20dip"
	        android:layout_toRightOf="@id/activity_upanddown_left_rl">
	        <RelativeLayout android:id="@+id/activity_upanddown_down_bg_rl"
		        android:layout_width="360dip"
		        android:layout_height="470dip"
		        android:background="@android:color/black"
		        android:layout_marginTop="20dip"
		        android:layout_marginLeft="35dip"/>
		    <RelativeLayout android:id="@+id/activity_upanddown_down_rl"
		        android:layout_width="360dip"
		        android:layout_height="470dip"
		        android:background="#314F67"
		        android:layout_marginTop="10dip"
	        	android:layout_marginLeft="25dip">
	        	<RelativeLayout android:id="@+id/activity_upanddown_down_info_top_rl"
	        	    android:layout_width="wrap_content"
	        	    android:layout_height="wrap_content"
	        	    android:layout_marginTop="10dip"
	        	    android:layout_centerHorizontal="true">
	        	    <ImageView android:id="@+id/activity_upanddown_down_top_name_iv"
	        	        android:layout_width="45dip"
	        	        android:layout_height="45dip"
	        	        android:background="@drawable/localflies"/>
	        	    <TextView android:id="@+id/activity_upanddown_down_top_tv"
		        	    android:layout_width="wrap_content"
		        	    android:layout_height="wrap_content"
		        	    android:text="@string/upan_file"
		        	    android:textColor="@android:color/white"
		        	    android:textSize="20sp"
		        	    android:layout_marginLeft="10dip"
		        	    android:layout_centerVertical="true"
		        	    android:layout_toRightOf="@id/activity_upanddown_down_top_name_iv"/>
	        	</RelativeLayout>
	        	<ImageView android:id="@+id/activity_upanddown_down_top_iv"
	        	    style="@style/right_bottom_imageview"
	        	    android:layout_width="360dip"
	        	    android:layout_centerHorizontal="true"
	        	    android:layout_marginTop="10dip"
	        	    android:layout_below="@id/activity_upanddown_down_info_top_rl"/>
	        	<ListView android:id="@+id/activity_upanddown_down_top_lv"
	        	    android:layout_width="360dip"
	        	    android:layout_height="fill_parent"
	        	    android:layout_marginBottom="40dip"
	        	    android:layout_below="@id/activity_upanddown_down_top_iv"
	        	    android:divider="@drawable/line"
	        	    android:layout_centerHorizontal="true"/>
	        	<Button android:id="@+id/activity_upanddown_down_top_btn"
	        	    android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:clickable="true"
		            android:background="@drawable/btn_selector"
			        android:text="@string/up"
			        android:textSize="15sp"
			        android:textColor="@android:color/white"
			        android:layout_alignParentLeft="true"
			        android:layout_alignParentBottom="true"
			        android:layout_marginLeft="5dip"
			        android:layout_marginBottom="5dip"/>
	    	</RelativeLayout>
	    </RelativeLayout>
	    <Button android:id="@+id/experiment_right_back_btn"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:clickable="true"
            android:background="@drawable/btn_selector"
	        android:text="@string/back"
	        android:textSize="15sp"
	        android:textColor="@android:color/white"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentBottom="true"/>
	</RelativeLayout>
</RelativeLayout>
