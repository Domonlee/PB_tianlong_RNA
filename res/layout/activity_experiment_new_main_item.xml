<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#505E8D" >

    <RelativeLayout
        android:id="@+id/experiment_new_main_item_rl"
        android:layout_width="344dip"
        android:layout_height="500dip"
        android:layout_marginRight="10dip"
        android:background="#CCCCCC" >

        <RelativeLayout
            android:id="@+id/experiment_new_main_item_bottom_rl"
            android:layout_width="fill_parent"
            android:layout_height="43dip"
            android:layout_marginLeft="2dip"
            android:layout_marginRight="2dip"
            android:background="#314F67" >

            <EditText
                android:id="@+id/experiment_new_main_item_bottom_name_et"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="#314F67"
                android:digits="abcdefghijklmnoporstuvwxyzABCDEFGHIGKLMNOPQRSTUVWXYZ1234567890_"
                android:gravity="center"
                android:singleLine="true"
                android:text="裂     解"
                android:textColor="@android:color/white"
                android:textSize="25sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/experiment_new_main_item_bottom_rl"
            android:layout_margin="2dip"
            android:background="#CCCCCC"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/experiment_new_main_item_head_rl"
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_margin="2dip"
                android:layout_weight="3"
                android:background="#314F67"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/experiment_new_main_item_head_wait_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="0dip"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/experiment_new_main_item_head_wait_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/exp_wait"
                        android:textColor="@android:color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/experiment_new_main_item_head_wait_info_tv"
                        android:layout_width="220dip"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"
                        android:background="@drawable/wait"
                        android:gravity="center"
                        android:text="00:00:00"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/experiment_new_main_item_head_blend_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="0dip"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/experiment_new_main_item_head_blend_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/exp_blend"
                        android:textColor="@android:color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/experiment_new_main_item_head_blend_info_tv"
                        android:layout_width="220dip"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"
                        android:background="@drawable/blend"
                        android:gravity="center"
                        android:text="00:00:00"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/experiment_new_main_item_head_magnet_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="0dip"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/experiment_new_main_item_head_magnet_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/exp_magnetic"
                        android:textColor="@android:color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/experiment_new_main_item_head_magnet_info_tv"
                        android:layout_width="220dip"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"
                        android:background="@drawable/magnet"
                        android:gravity="center"
                        android:text="00:00:00"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/experiment_new_main_item_body_rl"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/experiment_new_main_item_body_hole_rl"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="0dip" >

                    <TextView
                        android:id="@+id/experiment_new_main_item_body_hole_tv"
                        android:layout_width="164dip"
                        android:layout_height="fill_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="2dip"
                        android:background="#314F67"
                        android:gravity="center"
                        android:text="@string/exp_hole"
                        android:textColor="@android:color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/experiment_new_main_item_body_hole_info_tv"
                        android:layout_width="164dip"
                        android:layout_height="fill_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="2dip"
                        android:layout_toRightOf="@id/experiment_new_main_item_body_hole_tv"
                        android:background="#314F67"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="@android:color/white"
                        android:textSize="20sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/experiment_new_main_item_body_vol_rl"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="0dip" 
                    android:layout_marginTop="2dip" >

                    <TextView
                        android:id="@+id/experiment_new_main_item_body_vol_tv"
                        android:layout_width="164dip"
                        android:layout_height="fill_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="2dip"
                        android:background="#314F67"
                        android:gravity="center"
                        android:text="@string/exp_vol"
                        android:textColor="@android:color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/experiment_new_main_item_body_vol_info_et"
                        android:layout_width="104dip"
                        android:layout_height="fill_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="2dip"
                        android:layout_toRightOf="@id/experiment_new_main_item_body_vol_tv"
                        android:background="#314F67"
                        android:gravity="center"
                        android:maxLength="4"
                        android:text="550"
                        android:textColor="@android:color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/experiment_new_main_item_body_vol_unit_tv"
                        android:layout_width="60dip"
                        android:layout_height="fill_parent"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/experiment_new_main_item_body_vol_info_et"
                        android:background="#314F67"
                        android:gravity="left|center_vertical"
                        android:text="ul"
                        android:textColor="@android:color/white"
                        android:textSize="20sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/experiment_new_main_item_body_speed_rl"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="0dip" 
                    android:layout_marginTop="2dip" >

                    <TextView
                        android:id="@+id/experiment_new_main_item_body_speed_tv"
                        android:layout_width="164dip"
                        android:layout_height="fill_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="2dip"
                        android:background="#314F67"
                        android:gravity="center"
                        android:text="@string/exp_blend_speed"
                        android:textColor="@android:color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/experiment_new_main_item_body_speed_info_tv"
                        android:layout_width="164dip"
                        android:layout_height="fill_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="2dip"
                        android:layout_toRightOf="@id/experiment_new_main_item_body_speed_tv"
                        android:background="#314F67"
                        android:gravity="center"
                        android:text="6赫兹"
                        android:textColor="@android:color/white"
                        android:textSize="20sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/experiment_new_main_item_body_temp_rl"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="0dip" 
                    android:layout_marginTop="2dip" >

                    <TextView
                        android:id="@+id/experiment_new_main_item_body_temp_tv"
                        android:layout_width="164dip"
                        android:layout_height="fill_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="2dip"
                        android:background="#314F67"
                        android:gravity="center"
                        android:text="@string/exp_temp"
                        android:textColor="@android:color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/experiment_new_main_item_body_temp_info_et"
                        android:layout_width="104dip"
                        android:layout_height="fill_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="2dip"
                        android:layout_toRightOf="@id/experiment_new_main_item_body_temp_tv"
                        android:background="#314F67"
                        android:gravity="center"
                        android:maxLength="3"
                        android:text="60"
                        android:textColor="@android:color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/experiment_new_main_item_body_temp_unit_tv"
                        android:layout_width="60dip"
                        android:layout_height="fill_parent"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/experiment_new_main_item_body_temp_info_et"
                        android:background="#314F67"
                        android:gravity="left|center_vertical"
                        android:text="@string/exp_temp_unit"
                        android:textColor="@android:color/white"
                        android:textSize="20sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/experiment_new_main_item_body_switch_rl"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="0dip" 
                    android:layout_marginTop="2dip" >

                    <TextView
                        android:id="@+id/experiment_new_main_item_body_switch_tv"
                        android:layout_width="164dip"
                        android:layout_height="fill_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="2dip"
                        android:background="#314F67"
                        android:gravity="center"
                        android:text="@string/exp_temp_type"
                        android:textColor="@android:color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/experiment_new_main_item_body_switch_info_tv"
                        android:layout_width="164dip"
                        android:layout_height="fill_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="2dip"
                        android:layout_toRightOf="@id/experiment_new_main_item_body_switch_tv"
                        android:background="#314F67"
                        android:gravity="center"
                        android:text="裂解加温"
                        android:textColor="@android:color/white"
                        android:textSize="20sp" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/experiment_new_main_item_top_name_tv"
                android:layout_width="fill_parent"
                android:layout_height="42dip"
                android:layout_margin="2dip"
                android:background="#505E8D"
                android:gravity="center"
                android:text="步骤一"
                android:textColor="@android:color/white"
                android:textSize="25sp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>