<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/machine_dismdect_iv"
        style="@style/right_imageview"
        android:background="@drawable/dismdect" />

    <RelativeLayout
        android:id="@+id/machine_dismdect_body_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >

        <RelativeLayout
            android:id="@+id/machine_dismdect_body_time_rl"
            android:layout_width="500dip"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/machine_dismdect_body_time_tv"
                style="@style/right_textview"
                android:layout_centerVertical="true"
                android:text="@string/dismdect" />

            <TextView
                android:id="@+id/machine_dismdect_body_time_et"
                style="@style/right_textview"
                android:layout_width="200dip"
                android:layout_alignParentRight="true"
                android:background="@drawable/edittext"
                android:text="00:00:00" />

            <ImageView
                android:id="@+id/machine_dismdect_body_time_iv"
                style="@style/right_bottom_imageview"
                android:layout_below="@id/machine_dismdect_body_time_et" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/machine_dismdect_bottom_btn_rl"
        style="@style/right_bottom_rl"
        android:layout_alignRight="@id/machine_dismdect_iv" >

        <Button
            android:id="@+id/machine_dismdect_bottom_btn_save"
            style="@style/right_btn"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="6dp"
            android:text="@string/sure" />
    </RelativeLayout>

</RelativeLayout>