<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <ImageView android:id="@+id/machine_update_iv"
        style="@style/right_imageview"
        android:background="@drawable/update"/>
    <RelativeLayout android:id="@+id/machine_update_body_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/machine_update_iv"
        android:layout_marginTop="10dip">
        <ImageView android:id="@+id/machine_update_body_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/line"/>
        <ListView android:id="@+id/machine_update_body_lv"
            android:layout_width="535dip"
            android:layout_height="300dip"
            android:divider="@drawable/line"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/machine_update_bottom_btn_rl"
        style="@style/right_bottom_rl"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dip">
        <Button android:id="@+id/machine_update_bottom_btn_save"
            style="@style/right_btn"
            android:text="@string/update"/>
    </RelativeLayout>
</RelativeLayout>
