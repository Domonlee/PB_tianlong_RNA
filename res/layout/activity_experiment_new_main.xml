<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    <RelativeLayout android:id="@+id/experiment_new_main_top_rl"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@drawable/head">
        <TextView android:id="@+id/experiment_new_main_top_uname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
		    android:textSize="20sp"
		    android:layout_centerInParent="true"/>
        <org.tianlong.rna.utlis.DigitalClock
		    android:id="@+id/experiment_new_main_top_time_dc"
     		android:layout_width="260dp"
     		android:layout_height="30dp"
     		android:layout_gravity="center_horizontal"
     		android:textColor="@android:color/white"
		    android:textSize="20sp"
		    android:layout_alignParentRight="true"
		    android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/experiment_new_main_body_rl"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/experiment_new_main_top_rl"
        android:layout_marginTop="2dip"
        android:layout_marginLeft="2dip"
        android:layout_marginRight="2dip"
        android:layout_marginBottom="63dip"
        android:background="#505E8D">
        <HorizontalScrollView android:id="@+id/experiment_new_main_body_sv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TableLayout android:id="@+id/experiment_new_main_body_tl"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"/>
        </HorizontalScrollView>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/experiment_new_main_bottom_rl"
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:layout_alignParentBottom="true"
        android:background="#505E8D"
        android:layout_margin="2dip">
        <TextView android:id="@+id/experiment_new_main_bottom_ename_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exp_name"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_centerVertical="true"
            android:layout_marginLeft="150dip"/>
        <TextView android:id="@+id/experiment_new_main_bottom_ename_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_toRightOf="@id/experiment_new_main_bottom_ename_tv"
            android:textColor="@android:color/white"
            android:layout_centerVertical="true"/>
        <EditText android:id="@+id/experiment_new_main_bottom_ename_info_et"
            android:layout_width="200dip"
	        android:layout_height="wrap_content"
	        android:textColor="@android:color/white"
	        android:gravity="center"
	        android:background="@drawable/edittext"
	        android:digits="abcdefghijklmnopqorstuvwxyzABCDEFGHIGKLMNOPQRSTUVWXYZ1234567890_"
            android:layout_toRightOf="@id/experiment_new_main_bottom_ename_tv"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:visibility="gone"/>
        <RelativeLayout android:id="@+id/experiment_new_main_bottom_btn_rl"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true">
            <Button android:id="@+id/experiment_new_main_bottom_insert_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:background="@drawable/btn_selector"
                android:text="@string/exp_insert_step"
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_centerVertical="true"/>
            <Button android:id="@+id/experiment_new_main_bottom_delete_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:background="@drawable/btn_selector"
                android:text="@string/exp_delete_step"
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_toRightOf="@id/experiment_new_main_bottom_insert_btn"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dip"/>
            <Button android:id="@+id/experiment_new_main_bottom_save_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:background="@drawable/btn_selector"
                android:text="@string/save"
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_toRightOf="@id/experiment_new_main_bottom_delete_btn"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dip"/>
            <Button android:id="@+id/experiment_new_main_bottom_back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:background="@drawable/btn_selector"
                android:text="@string/back"
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_toRightOf="@id/experiment_new_main_bottom_save_btn"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dip"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
