<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/machine_language_iv"
        style="@style/right_imageview"
        android:background="@drawable/language" />

    <RadioGroup
        android:id="@+id/machine_language_body_rg"
        style="@style/right_body_rl"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/machine_language_iv"
        android:orientation="vertical" >

        <RadioButton
            android:id="@+id/machine_language_body_chinese"
            style="@style/language_setting_radiobtn"
            android:layout_width="100dip"
            android:layout_height="70dip"
            android:paddingLeft="232dip"
            android:textColor="@color/black"
            android:textSize="50sp" />

        <RadioButton
            android:id="@+id/machine_language_body_english"
            style="@style/language_setting_radiobtn"
            android:layout_width="100dip"
            android:layout_height="70dip"
            android:layout_marginTop="20dip"
            android:paddingLeft="232dip"
            android:text="@string/language_english" />
    </RadioGroup>
    
    <LinearLayout 
        android:layout_alignTop="@+id/machine_language_body_rg"
        android:layout_toRightOf="@+id/machine_language_body_rg"
        android:layout_width="100dip"
        android:layout_height="160dip"
        android:orientation="vertical"
        >

        <TextView
        android:id="@+id/textView1"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:text="@string/language_chinese"
        android:layout_marginTop="24dp"
        android:textColor="@color/white"
        android:textSize="25sp" />
        
        <TextView
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:text="@string/language_english"
        android:textColor="@color/white"
        android:layout_marginTop="54dp"
        android:textSize="25sp" />
</LinearLayout>
    <RelativeLayout
        android:id="@+id/machine_language_bottom_btn_rl"
        style="@style/right_bottom_rl"
        android:layout_alignRight="@id/machine_language_iv" >

        <Button
            android:id="@+id/machine_language_bottom_btn_save"
            style="@style/right_btn"
            android:text="@string/sure" />
    </RelativeLayout>

